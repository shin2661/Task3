<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.crizen.task3.mapper.MemberMapper">

	<resultMap type="MemberVO" id="memberMap">
		<id property="id" column="userid" />
		<result property="id" column="id" />
		<result property="passwd" column="passwd" />
		<result property="name" column="name" />
		<result property="regist_date" column="regist_date" />
		<collection property="authList" resultMap="authMap">
		</collection>
	</resultMap>
	
	<resultMap type="AuthVO" id="authMap">
		<result property="id" column="id" />
		<result property="auth" column="auth" />
	</resultMap>

	 <!-- 사용자 정보를 가져오기 -->
    <select id="read" parameterType="string" resultMap="memberMap">
        SELECT * 
	        FROM USER_INFO u
	        LEFT JOIN AUTH a
	        ON u.id = a.id
	        WHERE u.id = #{userId}
    </select>

	<!-- 회원가입 -->
	<insert id="insertMember">
		INSERT INTO 
			USER_INFO(id
				,name
				, passwd
				, regist_date)
			VALUES(
				#{id}
				, #{name}
				, #{passwd}
				, NOW()
			)
	</insert>
	
	<!-- 회원정보 조회 -->
	<select id="selectMemebr">
		 SELECT * 
	        FROM USER_INFO 
	        WHERE id = #{id}
	</select>
	
	<!-- 비밀번호 실패횟수 초기화 -->
	<update id="updateFailCount">
		UPDATE USER_INFO
			SET fail_count = #{fail_count}
			WHERE id = #{id}
	</update>
	
	<!-- 회원정보 수정(계정잠금) -->
	<update id="updateMember">
		UPDATE USER_INFO
			SET 
				passwd = #{passwd}
				, fail_count = #{fail_count}
				, locked = #{locked}
			WHERE id = #{id}
	</update>
</mapper>
